<?xml version="1.0" encoding="utf-8" ?>

<styles>
  <resource name="borderfillcolornormal" value="40,40,40" />
  <resource name="borderfillcolorhoover" value="80,80,80" />
 
  <control name="Pandora.Interactions.UI.Controls.Button">
      <set property="FillColor">#borderfillcolornormal</set>

    <animation event="MouseEnter" groupname="mousemove">
        <set property="FillColor" duration="100">#borderfillcolorhoover</set>
    </animation>

    <!--<animation event="MouseLeave" groupname="mousemove">
        <set property="FillColor" duration="100">#borderfillcolornormal</set>
    </animation>-->

    <storyboard event="MouseEnter" groupname="mousemove">
      <set property="FillColor" start="0" duration="100">#borderfillcolornormal</set>
      <set property="FillColor" start="100" duration="100">128,128,128</set>
    </storyboard>
  </control>
</styles>